<project name="PyInstaller builder" default="py_installer.help">

	<property name="application.root" location="../PyMed"/>	
	
	<import file="../PyMedCommon/build_common.xml"/>
	
	<target name="BUILD.test_poincare.egg" description="build py_med egg">
		<antcall target="build.egg">
		    <param name="application.name" value="test_poincare"/>
		    <param name="application.description" value="Test poincare egg"/>
			<param name="required.packages" value="numpy"/>			
		</antcall>
	</target>
	
	<target name="BUILD.test_poincare" description="build test_poincare application">
		<antcall target="build.application">
		    <param name="application.name" value="test_poincare"/>
			<param name="start.script" value="src/med/programs/console/test_poincare.py"/>
			<param name="console.type" value="True"/>
			<param name="build.type" value="F"/>
		</antcall>
	</target>
	
	<target name="BUILD.test_QT" description="Build test_QT application">
		<antcall target="build.application">
		    <param name="application.name" value="test_QT"/>
			<param name="start.script" value="src/med/programs/gui/test_QT.pyw"/>
		    <param name="build.type" value="F"/>
		</antcall>
	</target>	


	<target name="BUILD.QtOpenGl_test" description="Build QtOpenGl_test application">
		<antcall target="build.application">
			<param name="additional.paths" value="H:\\python\\python_64\\Python27\\Lib\\site-packages\\PyQt4\\"/>			
		    <param name="application.name" value="QtOpenGL_test"/>
			<param name="start.script" value="src/med/programs/gui/QtOpenGL_test.py"/>
			<param name="console.type" value="True"/>
			<param name="build.type" value="F"/>
			<param name="debug.info" value="True"/>
			<param name="egg.1" value="..\\OldSources\\lib_test2-0.1-py2.7.egg"/>			
		</antcall>
	</target>	
	

	<target name="CLEAN.test_poincare" description="clean test_poincare">
		<antcall target="clean.application">
		    <param name="application.name" value="test_poincare"/>
		</antcall>
	</target>

	<target name="CLEAN.test_QT" description="clean test_QT">
		<antcall target="clean.application">
		    <param name="application.name" value="test_QT"/>
		</antcall>
	</target>

	<target name="CLEAN.QtOpenGl_test" description="clean QtOpenGl_test">
		<antcall target="clean.application">
		    <param name="application.name" value="QtOpenGl_test"/>
		</antcall>
	</target>
	
	<target name="DOC.pdf.test_poincare" description="generate pdf documentation">
		<antcall target="gen.pdf.documentation">
		    <param name="application.name" value="test_poincare"/>
		</antcall>		
	</target>

	<target name="DOC.chm.test_poincare" description="generate chm documentation">
		<antcall target="gen.chm.documentation">
		    <param name="application.name" value="test_poincare"/>
		</antcall>		
	</target>

</project>
